{% extends 'adminbase.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}
    <section class="admin d-flex flex-column align-items-center">
        <h1>RÉALISATIONS</h1>
        <div class="d-flex flex-column align-items-center">
            <table class="table table-responsive">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ portfolio.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ portfolio.name }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ portfolio.date ? portfolio.date|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Cover</th>
                    <td>{{ portfolio.cover }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ portfolio.content }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('portfolio_index') }}" class="btn btn-primary">Retour</a>

            <a href="{{ path('portfolio_edit', {'id': portfolio.id}) }}" class="btn btn-primary">Éditer</a>

            {{ include('portfolio/_delete_form.html.twig') }}
        </div>
    </section>
{% endblock %}
