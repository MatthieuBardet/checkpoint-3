{% extends 'adminbase.html.twig' %}

{% block title %}Skill{% endblock %}

{% block body %}
    <section class="admin d-flex flex-column align-items-center">
        <h1>COMPÉTENCES</h1>
        <div class="d-flex flex-column align-items-center">
            <table class="table table-responsive">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ skill.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ skill.name }}</td>
                </tr>
                <tr>
                    <th>Logo</th>
                    <td>{{ skill.logo }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('skill_index') }}" class="btn btn-primary">Retour</a>

            <a href="{{ path('skill_edit', {'id': skill.id}) }}" class="btn btn-primary">Éditer</a>

            {{ include('skill/_delete_form.html.twig') }}
        </div>
    </section>
{% endblock %}
