{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Accueil{% endblock %}

    {% block stylesheets %}
        {{ parent() }}
        {{ encore_entry_link_tags('home') }}
    {% endblock %}

{% block body %}
    <header class="d-flex flex-column align-items-center justify-content-center">
        <div class="container row align-items-center justify-content-center">
            <div class="text-center col-12 col-xl-8">
                <div class="header-title">
                    <h1>MATTHIEU BARDET</h1>
                    <h2>DÉVELOPPEUR WEB</h2>
                </div>
                <div class="header-text">
                    <p class="light">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis semper nunc ante, sit amet
                        malesuada
                        arcu scelerisque ut.
                    </p>
                    <p class="light mb-0">
                        <b>Maecenas eget augue bibendum, consectetur ex sit amet, elementum dui.</b>
                    </p>
                </div>
            </div>
            <a href="#" class="scroll-down" address="true"></a>
        </div>
    </header>
    <section class="skills">
        <div class="container">
            <h2 class="text-center mb-5">COMPÉTENCES</h2>
            <div class="row">
                {% for skill in skills %}
                    <div class="skill-card col-10 col-xl-3 d-flex justify-content-center">
                        <img src="{{ asset('uploads/'~skill.logo) }}" alt="{{ skill.name }}" title="{{ skill.name }}">
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <section class="portfolio">
        <div class="container">
            <h2 class="text-center mb-5">RÉALISATIONS</h2>
            <div class="row d-flex flex-wrap justify-content-between">
                {% for portfolio in portfolios %}
                    <div class="card col-8 col-md-10 col-lg-5">
                        <img class="card-img-top" src="{{ asset('uploads/'~portfolio.cover) }}" alt="{{ portfolio.name }}" title="{{ portfolio.name }}">
                        <div class="portfolio-card-body card-body d-flex flex-column align-items-center">
                            <h3 class="card-title">{{ portfolio.name }}</h3>
                            <a href="#" class="btn btn-primary">En savoir plus</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}