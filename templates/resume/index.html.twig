{% extends 'base.html.twig' %}

{% block title %}Resume index{% endblock %}

{% block body %}
    <h1>Resume index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Resume</th>
                <th>WhoAmI</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resume in resumes %}
            <tr>
                <td>{{ resume.id }}</td>
                <td>{{ resume.resume }}</td>
                <td>{{ resume.whoAmI }}</td>
                <td>
                    <a href="{{ path('resume_show', {'id': resume.id}) }}">show</a>
                    <a href="{{ path('resume_edit', {'id': resume.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('resume_new') }}">Create new</a>
{% endblock %}
